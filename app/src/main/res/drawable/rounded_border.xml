<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Border color -->
            <corners android:radius="16dp"/> <!-- Radius for rounded corners -->
        </shape>
    </item>

    <!-- Inner content -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="14dp"/> <!-- Radius to match inner content -->
        </shape>
    </item>
</layer-list>